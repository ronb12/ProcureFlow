rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Receipts storage - organized by org/request
    match /receipts/{orgId}/{requestId}/{fileName} {
      allow read, write: if request.auth != null 
        && request.auth.token.orgId == orgId;
    }
    
    // Attachments storage - organized by org/entity type/entity id
    match /attachments/{orgId}/{entityType}/{entityId}/{fileName} {
      allow read, write: if request.auth != null 
        && request.auth.token.orgId == orgId;
    }
    
    // Exports storage - admin and cardholder only
    match /exports/{allPaths=**} {
      allow read, write: if request.auth != null 
        && request.auth.token.role in ['admin', 'cardholder'];
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
